<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	 <div class="clear"></div>

	<div id="bottom_content" class="page panes">
	
			
		 <div id="Title" class="Signup">
			<p> Update your profile </p> 
		</div>
		 <div class="clear"></div>
		
		<div id="contact" class="pane">
			<div id="contact_form">
				<div class="left">
				  <div class="text_input">
				    <%= f.label :email %><br />
				    <%= f.text_field :email %>
				  </div>
				  <div class="text_input">
				    <%= f.label :password %><br />
				    <%= f.password_field :password %>
				  </div>
				  <div class="text_input">
				    <%= f.label :password_confirmation %><br />
				    <%= f.password_field :password_confirmation %>
				  </div>
				  <div class="text_input">
				    <%= f.label :name %><br />
				    <%= f.text_field :name %>
				  </div>
				  <div class="text_input">
				    <%= f.label :last_name %><br />
				    <%= f.text_field :last_name %>
				  </div>
				  <div class="text_input">
				    <%= f.label :birthdate %><br />
				    <%= f.date_select :birthdate, :start_year=>1930 , :end_year=>2012 %>
				  </div>
				  <div class="text_input">
				    <%= f.label :partner_email %><br />
				    <%= f.text_field :partner_email %>
				  </div>
				  <div class="text_input">
				    <%= f.label :city %><br />
				    <%= f.text_field :city %>
				  </div>
				  <div class="text_input">
				    <%= f.label :country %><br />
				    <%= f.text_field :country %>
				  </div>
				  <div class="text_input">
				    <%= f.label :share_location %><br />
				    <%= f.check_box :share_location %>
				  </div>
				  <div class="text_input">
				    <%= f.label :mood %><br />
				    <%= f.text_field :mood %>
				  </div>
				  <div class="text_input">
				    <%= f.label :activity %><br />
				    <%= f.text_field :activity %>
				  </div>
				  <div class="actions">
				    <%= f.submit "Send" %>
				</div>
			</div> <!-- end left -->
			
			
		
			
			<div class="clear"></div>
			
	  </div> <!-- end contact form -->
	</div> <!-- end contact -->
</div> <!-- end bottom content -->
<% end %>
