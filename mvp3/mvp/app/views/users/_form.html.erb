<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	 <div class="clear"></div>

	<div id="bottom_content" class="page panes">
	
			
		 <div id="Title" class="Signup">
			<p> Getting started is a matter of seconds </p> 
		</div>
		 <div class="clear"></div>
		
		<div id="contact" class="pane">
			<div id="contact_form">
				<div class="left">
				  <div class="text_input">
				    <%= f.label :email %><br />
				    <%= f.text_field :email %>
				  </div>
				  <div class="text_input">
				    <%= f.label :password %><br />
				    <%= f.password_field :password %>
				  </div>
				  <div class="text_input">
				    <%= f.label :password_confirmation %><br />
				    <%= f.password_field :password_confirmation %>
				  </div>
				  <div class="text_input">
				    <%= f.label :name %><br />
				    <%= f.text_field :name %>
				  </div>
				  <div class="text_input">
				    <%= f.label :last_name %><br />
				    <%= f.text_field :last_name %>
				  </div>
				  <div class="text_input">
				    <%= f.label :birthdate %><br />
				    <%= f.date_select :birthdate, :start_year=>1930 , :end_year=>2012 %>
				  </div>
				  <div class="text_input">
				    <%= f.label :partner_email %><br />
				    <%= f.text_field :partner_email %>
				  </div>
				  <div class="text_input">
				    <%= f.label :city %><br />
				    <%= f.text_field :city %>
				  </div>
				  <div class="text_input">
				    <%= f.label :country %><br />
				    <%= f.text_field :country %>
				  </div>
				  <div class="text_input">
				    <%= f.label :share_location %><br />
				    <%= f.check_box :share_location %>
				  </div>
				  <div class="text_input">
				    <%= f.label :mood %><br />
				    <%= f.text_field :mood %>
				  </div>
				  <div class="text_input">
				    <%= f.label :activity %><br />
				    <%= f.text_field :activity %>
				  </div>
				  <div class="actions">
				    <%= f.submit %>
				</div>
			</div> <!-- end left -->
			
			
			<div class="right">
				<div id="reviews"> <!-- Start Reviews -->
					<div class="review">
						<p>Can't wait for the iPhone version. This is awesome even on the web!</p>
						<span>- Esther</span>
					</div>
					<div class="review">
						<p>I love how easy it is to use. No more struggling with texting in a meeting.</p>
						<span>- Billie </span>
					</div>
					<div class="review">
						<p>Now I always know when Aaron's busy.. no more waiting for replies to my messages.</p>
						<span>- Katie </span>
					</div>
					<div class="review">
						<p>Finally.. there is an app for that!</p>
						<span>- Sharon</span>
					</div>
					<!-- Add more reviews here -->
				</div> <!-- End Reviews -->
			</div> <!-- end right -->
			
			<div class="clear"></div>
			
	  </div> <!-- end contact form -->
	</div> <!-- end contact -->
</div> <!-- end bottom content -->
<% end %>
